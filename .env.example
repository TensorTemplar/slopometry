# Slopometry Configuration
# Copy this file to .env and customize as needed

# Database location (relative to current directory)
SLOPOMETRY_DATABASE_PATH=.claude/slopometry.db

# Python executable to use for hook handler
# Leave empty to auto-detect (uses sys.executable)
# SLOPOMETRY_PYTHON_EXECUTABLE=python

# Session ID prefix (useful for distinguishing sessions)
SLOPOMETRY_SESSION_ID_PREFIX=

# Whether to backup existing Claude settings
SLOPOMETRY_BACKUP_EXISTING_SETTINGS=true

# Display settings
SLOPOMETRY_EVENT_DISPLAY_LIMIT=50
SLOPOMETRY_RECENT_SESSIONS_LIMIT=10