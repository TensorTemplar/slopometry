# Slopometry Configuration
# Copy this file to ~/.config/slopometry/.env for global configuration
# or to .env in your project directory for project-specific settings

# Database location (default: platform-specific data directory)
# SLOPOMETRY_DATABASE_PATH=/path/to/slopometry.db

# Python executable for hook handler (default: uses uvx slopometry hook-handler)
# SLOPOMETRY_PYTHON_EXECUTABLE=/usr/bin/python3

# Session ID prefix (default: empty)
# SLOPOMETRY_SESSION_ID_PREFIX=myproject_

# Display limits
# SLOPOMETRY_EVENT_DISPLAY_LIMIT=50
# SLOPOMETRY_RECENT_SESSIONS_LIMIT=10

# Debug mode (default: false)
# SLOPOMETRY_DEBUG_MODE=true

# Complexity Analysis Settings
# Enable complexity analysis on Stop events (default: true)
# Recommended: Keep enabled to collect analytics data
# SLOPOMETRY_ENABLE_COMPLEXITY_ANALYSIS=true

# Provide complexity feedback to Claude (default: false) 
# When true: Claude gets feedback and may be blocked for significant changes
# When false: Analysis runs silently, Claude continues normally (recommended for most workflows)
# SLOPOMETRY_ENABLE_COMPLEXITY_FEEDBACK=false

# Backup existing settings when installing hooks (default: true)
# SLOPOMETRY_BACKUP_EXISTING_SETTINGS=false

# LLM Proxy Settings (for AI-powered features like userstorify-commits)
# URL for the LLM gateway/proxy
# SLOPOMETRY_LLM_PROXY_URL=http://localhost:8080/v1
# API key for LLM authentication
# SLOPOMETRY_LLM_PROXY_API_KEY=your-api-key-here